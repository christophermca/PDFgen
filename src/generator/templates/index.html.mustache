<!DOCTYPE html>

<html>
  <head>
    <title>Rendered Template</title>
    <link rel="stylesheet" type="text/css" href="/templates/index.css">
  </head>
  <body>
    <header>
      {{# patientData }}
      <p>{{reportDuration}}&nbsp;(Nov 14 - Jan 9, 2019)</p>
        <h2>{{name}}</h2>
        <div id="patientData">
          <section>
            {{# DOB }}
              <ul>
                <li>Date of Birth</li>
                <li>{{DOB}}</li>
              </ul>
            {{/DOB}}
            {{# sex }}
              <ul>
                <li>Sex</li>
                <li>{{sex}}</li>
              </ul>
            {{/sex}}
            {{# firstIngestion }}
              <ul>
                <li>First Ingestion</li>
                <li>{{firstIngestion}}</li>
              </ul>
            {{/firstIngestion}}
            {{# condition }}
              <ul>
                <li>Condition</li>
                <li>{{condition}}</li>
              </ul>
            {{/condition}}
          </section>
          <aside>
            <span>Discussion Points</span>
          </aside>
        </div>
      {{/ patientData }}
    </header>
    <main>
      <section id="digimeds">
        <h4 class="title">DigiMeds<span>&nbsp;(During Timeframe)</span></h4>
      </section>
      <section id="charts">
        <div id="proteusDigitalSummary">
          <h4 class="title">Proteus Discover Summary</h4>
        </div>
        <div>
          <h4 class="title">Blood Pressure<span>&nbsp;(Patient Entered)</span></h4>
          {{# bloodPressure}}
            <p>{{reportDuration}}</p>
            <div class="comparisonInfo">
             <div>
              <span class="numberValues">{{systolic}}</span>
              <p>Systolic</p>
            </div>
            <div>
              <span class="numberValues">{{diastolic}}</span>
              <p>Diatolic</p>
            </div>
            </div>
          {{/ bloodPressure}}
        </div>
        <div>
          <h4 class="title">Blood Glucose<span>&nbsp;(Patiend Entered)</span></h4>
          {{# bloodGlucose}}
            <p>{{reportDuration}}</p>
            <div class="comparisonInfo">
              <div>
                <span class="numberValues">{{before}}</span>
                <p>Before meal</p>
              </div>
              <div>
                <span class="numberValues">{{after}}</span>
                <p>After meal</p>
              </div>
            </div>
          {{/ bloodGlucose}}
        </div>
        <div>
          <h4 class="title">Wellness Metrics</h4>
        </div>
      </section>
    </main>
    <footer>
      <ul>
        <li>Report Generated {{createDate}}</li>
        <li>Proteus ID - {{patientData.id}} </li>
        <li><img src='/assets/Proteus_Discover_logo_black.svg' /></li>
      </ul>
    </footer>

  </body>
</html>
